{% extends "_layouts/main" %}

{% block main %}

	<section class="splash">
        <div class="container hideonload-splash">
            <h1>{{ entry.title }}</h1>
            <div class="meta">
                <a href="/blog"><img src="/assets/dist/img/icon-leftarrow.png" class="tagicon time" alt=""> <span class="wobble">Back to all posts</span></a>

                <div class="tag">
                    <img src="/assets/dist/img/icon-tag.png" class="tagicon" alt=""> {{ entry.category.one().title | title }}
                </div>

                <div class="time">
                    <img src="/assets/dist/img/icon-time.png" class="tagicon time" alt=""> {{ entry.postDate | date('jS F Y') }}
                </div>
            </div>
        </div>
    </section>

    <section class="singlepost pad notop lessbot wobblewithin">
        <div class="container hideonload">

            {% set projLink = entry.projectLinkTitle[0] %}

            {% if projLink.url %}
                <a href="{{ projLink.url }}" class="projectlink" target="_blank">{{ projLink.title }}</a>
            {% endif %}

            {{ entry.postContent }}
            
        </div>
    </section>

    <section class="twitter singlepost pad notop">
        <div class="container hideonload">

            <h2>Comment on this post</h2>
            <p>I love to talk web. If you have any civil thoughts, corrections or comments on this post, feel free to tweet or DM <a href="https://twitter.com/intent/follow?screen_name=fraserboag" class="wobble">@fraserboag</a> or, if you prefer, email <a href="mailto:fraser.boag@gmail.com" class="wobble">fraser.boag@gmail.com</a>.</p>

            <div class="tweet">
                <textarea maxlength="240">@fraserboag </textarea>
                <a class="button" href="https://twitter.com/intent/tweet?text=@fraserboag "><div class="content"><img src="/assets/dist/img/icon-twitter-white.png"> <span>Tweet</span></div></a>
            </div>
            
        </div>
    </section>

{% endblock %}